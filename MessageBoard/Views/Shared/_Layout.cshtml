<!DOCTYPE html>
<html lang="en" data-ng-app="@ViewBag.InitModule">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <!-- Change title, description and keywords -->
    <title>@ViewBag.Title - My Message Board</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="keywords" content="">

    <!-- HTML5 Support for IE -->
    <!--[if lt IE 9]>
    <script src="~/scripts/html5shim.js"></script>
    <![endif]-->
    <!-- Google Web Font -->
    <link href='http://fonts.googleapis.com/css?family=Dosis:200,400,600' rel='stylesheet' type='text/css'>

    <!-- Stylesheets -->
    <link href="~/Content/Template/style/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Template/style/font-awesome.css">
    <!--[if IE 7]>
    <link rel="stylesheet" href="~/Content/Template/style/font-awesome-ie7.css">
    <![endif]-->

    <link href="~/Content/Template/style/ddlevelsmenu-base.css" rel="stylesheet">
    <link href="~/Content/Template/style/ddlevelsmenu-topbar.css" rel="stylesheet">
    <link href="~/Content/Template/style/style.css" rel="stylesheet">
    <!-- Change the template color below. Supported colors blue,red and green. -->
    <link href="~/Content/Template/style/blue.css" rel="stylesheet">
    <link href="~/Content/Template/style/bootstrap-responsive.css" rel="stylesheet">
    <link href="~/Content/Template/style/flexslider.css" rel="stylesheet">
    <link href="~/Content/Template/style/prettyPhoto.css" rel="stylesheet">

    <link href="~/Content/Site.css" rel="stylesheet" />
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/Template/img/favicon/favicon.png">
</head>

<body>

    <!-- Sliding share panel. Click "Share it" to see. -->

    <div class="sharepanel">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <div class="padd spara">
                        <!-- Small para -->
                        <p>Let's share this shizzle..! </p>
                    </div>
                </div>
                <div class="span4">
                    <div class="padd">
                        <div class="social">
                            <!-- Social media icons. Repalce # with your profile links -->
                            <a href="#"><img src="~/Content/Template/img/facebook.png" alt="" width="40" /></a>
                            <a href="#"><img src="~/Content/Template/img/twitter.png" alt="" width="40" /></a>
                            <a href="#"><img src="~/Content/Template/img/linkedin.png" alt="" width="40" /></a>
                            <a href="#"><img src="~/Content/Template/img/googleplus.png" alt="" width="40" /></a>
                            <a href="#"><img src="~/Content/Template/img/rss.png" alt="" width="40" /></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <!-- Header -->

    <div class="fixedbar">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="logo">
                        <div class="pull-left">
                            <h1><a href="/#/"><i class="icon-bullhorn"></i>&nbsp;Boardly</a></h1>
                        </div>
                        <div class="navi">
                            <!-- Navigation Starts Here -->
                            <div class="pull-left">
                                <div id="ddtopmenubar" class="mattblackmenu">
                                    <!-- Main navigation -->
                                    <ul>
                                        <!-- Add rel="ddsubmenu{count}" to main menu -->
                                        <li><a href="/#/">Home</a></li>
                                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                        <li>@Html.ActionLink("About", "About", "Home")</li>
                                        <li>@Html.ActionLink("My Messages", "MyMessages", "Home")</li>
                                    </ul>
                                </div>
                            </div>
                            <!-- Navigation Ends Here -->
                        </div>
                    </div>
                    <div class="share">
                        <div class="pull-right">
                            <!-- Share it link for slider -->
                            <p><a href="#" class="open"><span class="hidden-phone">Share it</span> <i class="icon-share"></i></a></p>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>

    <!-- Main content -->

    <div class="main">
        <div class="container">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Foot -->
    <!-- Three column footer -->

    <div class="foot">
        <div class="container">
            <div class="row">
                <div class="span4">
                    <div class="padd">
                        <!-- Add class "widget" -->
                        <div class="widget">
                            <!-- Title -->
                            <h3>Dynamic SPA site</h3>
                            <!-- Content -->
                            <!-- Below is the blockquote -->
                            <blockquote>
                                <p>This site is an example of a message board type site where users post questions and others reply with answers, comments, etc. The data is stored in a database and retrieved and updated using an API. It's also fully responsive and will display correctly on most devices regardless of screen size</p>
                                <!-- Author information -->
                                <small>Ciaran</small>
                            </blockquote>
                        </div>
                    </div>
                </div>
                <div class="span4">
                    <div class="padd">
                        <div class="widget">
                            <h3>About this site</h3>
                            <ul>
                                <li>This site is built with Angular.js on the front end, ASP.NET MVC, Entity Framework, web api, and a SQL Server back end</li>
                                <li>It shows the ability to add parent (topics) and child (replies) records dynamically and save them to the database</li>
                                <li>It uses Bootstrap to create a fully responsive front end, which ensures it will display and work correctly on different screen sizes</li>
                                <li>If you're seeing this that means I got it up and running on Azure - yay!</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="span4">
                    <div class="padd">
                        <div class="widget">
                            <h3>Links</h3>
                            <ul>
                                <li><a href="http://www.angularjs.org">Angularjs.org website, everything you need to know about Angular</a></li>
                                <li><a href="http://www.asp.net">Microsft's asp.net website with all the latest and greatest from the .NET world</a></li>
                                <li><a href="http://stackoverflow.com/users/177347/ciaran-bruen">My Stackoverflow profile</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="span12">
                    <!-- Copyright information -->
                    <div class="fpadd">Copyright &copy; 2015 - <a href="#">Your Site</a> / <a href="#">Disclaimer</a> / <a href="#">Privacy Policy</a></div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </footer>

    <!-- JS -->

    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
    <script src="~/Scripts/jquery-2.0.2.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/scripts/easing.js"></script>
    <script src="~/scripts/bootstrap.js"></script>
    <script type="text/javascript" src="~/scripts/ddlevelsmenu.js"></script>
    <script type="text/javascript" src="~/scripts/flexslider.js"></script>
    <script type="text/javascript" src="~/scripts/jquery.prettyPhoto.js"></script>
    <script type="text/javascript" src="~/scripts/custom.js"></script>

    @RenderSection("scripts", required: false)

    <script type="text/javascript">

        // alert('Hallo and welcome to the Board!');
        $(document).ready(function () {
            $('div.counter').on('click', function () {
                // alert('You clicked me!' + this);
                var ctr = parseInt($(this).find('span').html());
                $(this).find('span').html(ctr + 1);
            });
        });

    </script>
</body>
</html>